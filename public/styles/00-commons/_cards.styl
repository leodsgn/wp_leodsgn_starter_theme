@import "../_variables.styl"
@import "../00-mixins/mixins.styl"

.card
    width: 300px
    background-color $white
    overflow: hidden
    border-radius: 5px
    margin: 20px

    &__figure
        position: relative
        width: 100%
        height: 200px
        overflow: hidden
        background-color: #000
        
        &__image
            position: absolute
            top: 0
            left: 0
            right: 0
            bottom: 0
            margin: 0 auto
            max-width: 400px
            height: auto

        &__caption
            position: absolute
            bottom: 0
            left: 0
            padding: 10px

            &__title
                color: $white
                font-size: 2em
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7)


    &__body
        width: 100%
        background-color $white
        padding: 10px

        &__description
            width: 100%
            margin: 0 0 20px 0

        &__info
            width: 100%
            margin: 0 0 20px 0

            p, span
                margin: 5px 5px 10px 5px

                i
                    color: $color_primary
                    margin: 0 10px 0 0
