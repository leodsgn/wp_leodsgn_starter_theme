.contact
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    background-color: $dark

    +mq(S)
        flex-direction: column

    &__form-section
        padding: 30px 100px
        text-align: center
        width: 100%
        min-height: 70vh
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center

        +mq(S)
            padding: 30px 20px

        form
            width: 100%

            input, textarea
                padding: 15px
                background-color: $dark
                border-color: $white
                box-shadow: none
                outline: none
                color: $white

                &:focus, &:active, &:hover
                    border-color: $white
                    box-shadow: 0 0 5px $white
                    outline: none

    &__map-section
        position: relative
        display: flex
        align-items: center
        width: 100%
        padding: 30px
        height: 100%
        background-color $color_grey_light
        min-height: 70vh

        &__location
            position: absolute
            top: 50%
            left: 20px
            padding: 20px
            transform: translateY(-50%)
            background-color: $white
            border-radius: 5px
            opacity: 0.7

            h3
                font-size: 1.5em
                color: $color_primary
                margin-bottom: 20px

                i
                    margin-right: 10px

            p
                margin: 0 0 10px 0

                &:last-child
                    margin: 0


        

        
